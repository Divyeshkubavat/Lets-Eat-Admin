<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Admin_Offer_Edit">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="---:  OFFERS  :---"
                    android:textColor="@color/app"
                    android:textSize="@dimen/_32sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_40sdp"/>

                <ImageView
                    android:id="@+id/Admin_Offer_Edit_Image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_35sdp"
                    android:clickable="true"
                    android:src="@drawable/upload_image"
                    app:civ_border_color="@color/app"
                    app:civ_border_width="@dimen/_2sdp"
                    android:background="@drawable/image_border"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_marginRight="@dimen/_3sdp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_20sdp">
                    <View
                        android:layout_width="@dimen/_122sdp"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/black"
                        android:layout_marginTop="@dimen/_10sdp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Category"
                        android:textColor="@color/app"
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:textSize="@dimen/_15sdp"/>
                    <View
                        android:layout_width="@dimen/_140sdp"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/black"
                        android:layout_marginTop="@dimen/_10sdp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_80sdp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical">

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_80sdp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical|center_horizontal">
                        <RadioButton
                            android:layout_width="@dimen/_65sdp"
                            android:layout_height="@dimen/_65sdp"
                            android:id="@+id/Admin_Offer_Edit_Burger_Radio"
                            android:textSize="@dimen/_16sdp"
                            android:text="201"
                            android:button="@android:color/transparent"
                            android:background="@drawable/radio_selector"
                            android:textColor="@drawable/text_colour"
                            android:foreground="@drawable/burger"
                            android:textAlignment="center"
                            android:elevation="@dimen/_4sdp"/>
                        <RadioButton
                            android:layout_width="@dimen/_65sdp"
                            android:layout_height="@dimen/_65sdp"
                            android:layout_marginLeft="@dimen/_12sdp"
                            android:textSize="@dimen/_16sdp"
                            android:text="202"
                            android:id="@+id/Admin_Offer_Edit_Pizza_Radio"
                            android:foreground="@drawable/pizza"
                            android:button="@android:color/transparent"
                            android:background="@drawable/radio_selector"
                            android:textColor="@drawable/text_colour"
                            android:textAlignment="center"
                            android:elevation="@dimen/_4sdp"/>
                        <RadioButton
                            android:layout_width="@dimen/_65sdp"
                            android:layout_height="@dimen/_65sdp"
                            android:layout_marginLeft="@dimen/_12sdp"
                            android:textSize="@dimen/_16sdp"
                            android:text="203"
                            android:id="@+id/Admin_Offer_Edit_Combo_Radio"
                            android:foreground="@drawable/combo"
                            android:button="@android:color/transparent"
                            android:background="@drawable/radio_selector"
                            android:textColor="@drawable/text_colour"
                            android:textAlignment="center"
                            android:elevation="@dimen/_4sdp"/>
                        <RadioButton
                            android:layout_width="@dimen/_65sdp"
                            android:layout_height="@dimen/_65sdp"
                            android:layout_marginLeft="@dimen/_12sdp"
                            android:textSize="@dimen/_16sdp"
                            android:text="204"
                            android:id="@+id/Admin_Offer_Edit_Drink_Radio"
                            android:foreground="@drawable/drink"
                            android:button="@android:color/transparent"
                            android:background="@drawable/radio_selector"
                            android:textColor="@drawable/text_colour"
                            android:textAlignment="center"
                            android:elevation="@dimen/_4sdp"/>
                    </RadioGroup>
                </LinearLayout>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:id="@+id/Admin_Offer_Update_Button"
                    android:text="ADD"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:layout_marginRight="@dimen/_40sdp"
                    android:layout_marginLeft="@dimen/_40sdp"
                    android:backgroundTint="#281818"
                    android:textColor="@color/white"
                    android:background="@drawable/admin_home_button_2"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>