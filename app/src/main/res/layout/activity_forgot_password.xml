<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app"
    tools:context=".Activities.Forgot_Password">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/l1"
                android:orientation="vertical">
                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_180sdp"
                    app:lottie_autoPlay="true"
                    app:lottie_rawRes="@raw/registration"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/User_Login_Animation"
                    app:lottie_repeatCount="50"
                    tools:ignore="MissingClass"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_edittext"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginLeft="@dimen/_24sdp"
                    android:layout_marginRight="@dimen/_24sdp"
                    app:cardCornerRadius="@dimen/_24sdp"
                    app:cardElevation="@dimen/_16sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_horizontal"
                        android:padding="@dimen/_20sdp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Password"
                            android:id="@+id/logintext"
                            android:textSize="@dimen/_30sdp"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="#281818"/>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            app:hintAnimationEnabled="true"
                            app:boxStrokeWidth="0dp"
                            app:boxBackgroundColor="#ffffff"
                            app:boxStrokeWidthFocused="0dp"
                            android:hint=" ">
                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/custom_edittext"
                                android:padding="@dimen/_12sdp"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:inputType="textEmailAddress"
                                android:hint="Email"
                                android:id="@+id/Email"
                                android:singleLine="true"
                                android:drawableLeft="@drawable/baseline_email_24"
                                android:drawablePadding="@dimen/_8sdp"/>

                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            app:hintAnimationEnabled="true"
                            android:hint=" "
                            app:startIconTint="#281818"
                            app:boxStrokeWidth="0dp"
                            app:boxBackgroundColor="#ffffff"
                            app:boxStrokeWidthFocused="0dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/custom_edittext"
                                android:id="@+id/otp"
                                android:singleLine="true"
                                android:drawableLeft="@drawable/baseline_lock_24"
                                android:visibility="gone"
                                android:inputType="textPassword"
                                android:padding="@dimen/_12sdp"
                                android:hint="OTP"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            app:hintAnimationEnabled="true"
                            android:hint=" "
                            app:startIconTint="#281818"
                            app:boxStrokeWidth="0dp"
                            app:boxBackgroundColor="#ffffff"
                            app:boxStrokeWidthFocused="0dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/custom_edittext"
                                android:singleLine="true"
                                android:id="@+id/passsword"
                                android:drawableLeft="@drawable/baseline_lock_24"
                                android:visibility="gone"
                                android:inputType="textPassword"
                                android:padding="@dimen/_12sdp"
                                android:hint="Password"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            app:hintAnimationEnabled="true"
                            android:hint=" "
                            app:startIconTint="#281818"
                            app:boxStrokeWidth="0dp"
                            app:boxBackgroundColor="#ffffff"
                            app:boxStrokeWidthFocused="0dp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/custom_edittext"
                                android:singleLine="true"
                                android:drawableLeft="@drawable/baseline_lock_24"
                                android:visibility="gone"
                                android:id="@+id/confirm_password"
                                android:inputType="textPassword"
                                android:padding="@dimen/_12sdp"
                                android:hint="Confim Password"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/forgot_btn"
                                android:text="GET OTP"
                                android:visibility="visible"
                                android:textSize="@dimen/_14sdp"
                                android:backgroundTintMode="add"
                                android:textColor="@color/white"
                                android:background="@drawable/shape_button"/>
                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/forgot_btn1"
                                android:visibility="gone"
                                android:text="Verify OTP"
                                android:textSize="@dimen/_14sdp"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:backgroundTintMode="add"
                                android:textColor="@color/white"
                                android:background="@drawable/shape_button"/>
                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/forgot_btn2"
                                android:visibility="gone"
                                android:text="Change"
                                android:textSize="@dimen/_14sdp"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:backgroundTintMode="add"
                                android:textColor="@color/white"
                                android:background="@drawable/shape_button"/>
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>