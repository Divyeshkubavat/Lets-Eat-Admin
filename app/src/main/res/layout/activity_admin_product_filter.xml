<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Admin_Product_Filter">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="@dimen/_20sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_margin="@dimen/_5sdp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/app"
                    android:text="--: Filter :--"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/_25sdp"
                    android:padding="@dimen/_5sdp"
                    android:layout_margin="@dimen/_20sdp"/>
                <androidx.appcompat.widget.SearchView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_44sdp"
                    android:hint="Search here"
                    app:iconifiedByDefault="false"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:background="@drawable/search_design"
                    android:textAppearance="@color/white"
                    app:queryHint="Search here ...."/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:text="Category"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/app"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_80sdp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical">
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_80sdp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical|center_horizontal">
                        <RadioButton
                            android:layout_width="@dimen/_65sdp"
                            android:layout_height="@dimen/_65sdp"
                            android:textSize="@dimen/_16sdp"
                            android:button="@android:color/transparent"
                            android:background="@drawable/radio_selector"
                            android:textColor="@drawable/text_colour"
                            android:foreground="@drawable/burger"
                            android:textAlignment="center"
                            android:elevation="@dimen/_4sdp"/>
                        <RadioButton
                            android:layout_width="@dimen/_65sdp"
                            android:layout_height="@dimen/_65sdp"
                            android:layout_marginLeft="@dimen/_12sdp"
                            android:textSize="@dimen/_16sdp"
                            android:foreground="@drawable/pizza"
                            android:button="@android:color/transparent"
                            android:background="@drawable/radio_selector"
                            android:textColor="@drawable/text_colour"
                            android:textAlignment="center"
                            android:elevation="@dimen/_4sdp"/>
                        <RadioButton
                            android:layout_width="@dimen/_65sdp"
                            android:layout_height="@dimen/_65sdp"
                            android:layout_marginLeft="@dimen/_12sdp"
                            android:textSize="@dimen/_16sdp"
                            android:foreground="@drawable/combo"
                            android:button="@android:color/transparent"
                            android:background="@drawable/radio_selector"
                            android:textColor="@drawable/text_colour"
                            android:textAlignment="center"
                            android:elevation="@dimen/_4sdp"/>
                        <RadioButton
                            android:layout_width="@dimen/_65sdp"
                            android:layout_height="@dimen/_65sdp"
                            android:layout_marginLeft="@dimen/_12sdp"
                            android:textSize="@dimen/_16sdp"
                            android:foreground="@drawable/drink"
                            android:button="@android:color/transparent"
                            android:background="@drawable/radio_selector"
                            android:textColor="@drawable/text_colour"
                            android:textAlignment="center"
                            android:elevation="@dimen/_4sdp"/>
                    </RadioGroup>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Type"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/app"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:orientation="horizontal">
                        <RadioButton
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginLeft="@dimen/_12sdp"
                            android:textSize="@dimen/_16sdp"
                            android:foreground="@drawable/veg"
                            android:button="@android:color/transparent"
                            android:background="@drawable/radio_selector"
                            android:textColor="@drawable/text_colour"
                            android:textAlignment="center"
                            android:elevation="@dimen/_4sdp"/>
                        <RadioButton
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginLeft="@dimen/_12sdp"
                            android:textSize="@dimen/_16sdp"
                            android:foreground="@drawable/nonveg"
                            android:button="@android:color/transparent"
                            android:background="@drawable/radio_selector"
                            android:textColor="@drawable/text_colour"
                            android:textAlignment="center"
                            android:elevation="@dimen/_4sdp"/>
                    </RadioGroup>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rating"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/app"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical">
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical|center_horizontal">
                        <RadioButton
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:textSize="@dimen/_16sdp"
                            android:button="@android:color/transparent"
                            android:background="@drawable/radio_selector"
                            android:textColor="@drawable/text_colour"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:text="1"
                            android:elevation="@dimen/_4sdp"/>
                        <RadioButton
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:textSize="@dimen/_16sdp"
                            android:button="@android:color/transparent"
                            android:background="@drawable/radio_selector"
                            android:textColor="@drawable/text_colour"
                            android:textAlignment="center"
                            android:text="2"
                            android:textStyle="bold"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:elevation="@dimen/_4sdp"/>
                        <RadioButton
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:textSize="@dimen/_16sdp"
                            android:button="@android:color/transparent"
                            android:background="@drawable/radio_selector"
                            android:textColor="@drawable/text_colour"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:text="3"
                            android:elevation="@dimen/_4sdp"/>
                        <RadioButton
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:textSize="@dimen/_16sdp"
                            android:button="@android:color/transparent"
                            android:background="@drawable/radio_selector"
                            android:textColor="@drawable/text_colour"
                            android:textAlignment="center"
                            android:text="4"
                            android:textStyle="bold"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:elevation="@dimen/_4sdp"/>
                        <RadioButton
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:textSize="@dimen/_16sdp"
                            android:button="@android:color/transparent"
                            android:background="@drawable/radio_selector"
                            android:textColor="@drawable/text_colour"
                            android:textAlignment="center"
                            android:text="5"
                            android:textStyle="bold"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:elevation="@dimen/_4sdp"/>
                    </RadioGroup>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Range"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/app"
                    android:textStyle="bold"/>
                <com.google.android.material.slider.Slider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:valueTo="500"
                    android:valueFrom="0"
                    android:stepSize="50"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/button"
                    android:textStyle="bold"
                    android:textColor="@color/app"
                    android:text="SUBMIT"
                    app:cornerRadius="@dimen/_12sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_15sdp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>