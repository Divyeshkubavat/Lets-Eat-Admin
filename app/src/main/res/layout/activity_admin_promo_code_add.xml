<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Admin_Promo_Code_Add"
    android:background="@color/app">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edittext"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp"
            app:cardCornerRadius="@dimen/_24sdp"
            app:cardElevation="@dimen/_16sdp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/_19sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_8sdp"
                    android:text="Promo Code"
                    android:textColor="@color/app"
                    android:textSize="@dimen/_26sdp"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:hint=" "
                    app:boxStrokeWidth="0dp"
                    app:boxBackgroundColor="#ffffff"
                    app:boxStrokeWidthFocused="0dp"
                    app:hintAnimationEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/Admin_Promo_Code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_edittext"
                        android:drawableLeft="@drawable/baseline_star_24"
                        android:drawablePadding="@dimen/_8sdp"
                        android:hint="Promo Code"
                        android:padding="@dimen/_12sdp"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:hint=" "
                    app:boxStrokeWidth="0dp"
                    app:boxBackgroundColor="#ffffff"
                    app:boxStrokeWidthFocused="0dp"
                    app:hintAnimationEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/Admin_Add_Discount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_edittext"
                        android:drawableLeft="@drawable/baseline_star_24"
                        android:drawablePadding="@dimen/_8sdp"
                        android:hint="Discount Parcentage"
                        android:inputType="number"
                        android:maxLength="10"
                        android:padding="@dimen/_12sdp"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>
                <Button
                    android:id="@+id/Admin_Add_PromoCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_24sdp"
                    android:background="@drawable/shape_button"
                    android:backgroundTint="#281818"
                    android:text="Add"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>