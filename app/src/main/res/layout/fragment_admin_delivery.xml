<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".AdminDelivery">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--: Delivery :--"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/app"
                android:id="@+id/Admin_Staff_Heading"
                android:textSize="@dimen/_30sdp"
                android:layout_margin="@dimen/_10sdp">
            </TextView>
            <androidx.appcompat.widget.SearchView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_44sdp"
                android:hint="Search here"
                android:id="@+id/Admin_Burger_Searchbar"
                android:layout_below="@id/Admin_Burger_Title"
                app:iconifiedByDefault="false"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_12sdp"
                android:background="@drawable/search_design"
                android:textAppearance="@color/white"
                app:queryHint="Search here ...."/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/Admin_Staff_Recyclerview"
                tools:listitem="@layout/activity_admin_delivery_design">
            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
    </ScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:src="@drawable/baseline_add_24"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/button"
        android:layout_marginBottom="@dimen/_80sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:id="@+id/Admin_Staff_ADD_FloatButton"/>
</RelativeLayout>