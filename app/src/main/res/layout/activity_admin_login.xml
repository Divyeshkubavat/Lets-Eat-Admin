<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#281818"
    android:orientation="vertical"
    tools:context=".Admin_Login">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/l1"
            android:orientation="vertical">
            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_240sdp"
                app:lottie_autoPlay="true"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_centerHorizontal="true"
                app:lottie_rawRes="@raw/animation_lk70ackc"
                android:id="@+id/Admin_Login_Animation"
                app:lottie_repeatCount="50"
                tools:ignore="MissingClass"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_edittext"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_24sdp"
                android:layout_marginRight="@dimen/_24sdp"
                app:cardCornerRadius="@dimen/_24sdp"
                app:cardElevation="@dimen/_16sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:padding="@dimen/_20sdp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Login"
                        android:id="@+id/logintext"
                        android:textSize="@dimen/_30sdp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="#281818"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        app:hintAnimationEnabled="true"
                        app:boxStrokeWidth="0dp"
                        app:boxBackgroundColor="#ffffff"
                        app:boxStrokeWidthFocused="0dp"
                        android:hint=" ">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/custom_edittext"
                            android:padding="@dimen/_12sdp"
                            android:inputType="number"
                            android:hint="Mobile Number"
                            android:id="@+id/Admin_Login_Mobile"
                            android:maxLength="10"
                            android:singleLine="true"
                            android:drawableLeft="@drawable/baseline_local_phone_24"
                            android:drawablePadding="@dimen/_8sdp"/>

                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        app:hintAnimationEnabled="true"
                        android:hint=" "
                        app:passwordToggleTint="#281818"
                        app:passwordToggleEnabled="true"
                        app:startIconTint="#281818"
                        app:boxStrokeWidth="0dp"
                        app:boxBackgroundColor="#ffffff"
                        app:boxStrokeWidthFocused="0dp"
                        app:startIconDrawable="@drawable/baseline_lock_24">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/custom_edittext"
                            android:id="@+id/Admin_Login_Password"
                            android:singleLine="true"
                            android:inputType="textPassword"
                            android:padding="@dimen/_12sdp"
                            android:hint="Password"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Admin_Login_Button"
                        android:text="Login"
                        android:textSize="@dimen/_14sdp"
                        android:layout_marginTop="@dimen/_24sdp"
                        android:backgroundTintMode="add"
                        android:backgroundTint="@color/button"
                        android:background="@drawable/shape_button"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DON'T HAVE AN ACCOUNT ?"
        android:textColor="@color/white"
        android:textSize="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_520sdp"
        android:layout_marginLeft="@dimen/_48sdp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:textColor="@color/button"
        android:textStyle="bold"
        android:id="@+id/Admin_Login_Signup"
        android:textSize="@dimen/_13sdp"
        android:clickable="true"
        android:layout_marginTop="@dimen/_520sdp"
        android:layout_marginLeft="@dimen/_220sdp"/>
</RelativeLayout>