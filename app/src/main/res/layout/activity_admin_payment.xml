<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Admin_Payment">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="@dimen/_20sdp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="@dimen/_20sdp"
                    app:cardCornerRadius="@dimen/_10sdp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:background="#D097DD99">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hi ! Admin....."
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:textStyle="bold"
                                android:textColor="@color/app"
                                android:textSize="@dimen/_25sdp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/app"
                                android:textStyle="bold"
                                android:textSize="@dimen/_14sdp"
                                android:layout_marginTop="@dimen/_10sdp"/>
                            <TextView
                                android:id="@+id/Admin_Payment_Total_Income"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_40sdp"
                                android:textColor="@color/app"
                                android:textStyle="bold"
                                android:text="10500"
                                android:layout_gravity="center_horizontal" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_horizontal"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:layout_marginBottom="@dimen/_10sdp">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:gravity="center_horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Successfull"
                                        android:textColor="#30AC21"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/_14sdp"
                                        android:layout_marginLeft="@dimen/_20sdp"
                                        android:layout_marginRight="@dimen/_20sdp"/>
                                    <TextView
                                        android:id="@+id/Admin_Payment_Total_Paid_Income"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/_25sdp"
                                        android:textColor="#30AC21"
                                        android:textStyle="bold"
                                        android:text="5500"
                                        android:layout_marginLeft="@dimen/_20sdp"
                                        android:layout_marginRight="@dimen/_20sdp"/>
                                </LinearLayout>
                                <View
                                    android:layout_width="@dimen/_2sdp"
                                    android:layout_height="@dimen/_50sdp"
                                    android:background="@color/black"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_marginRight="@dimen/_10sdp"/>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:gravity="center_horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Pending"
                                        android:textColor="#C62828"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/_14sdp"
                                        android:layout_marginLeft="@dimen/_20sdp"
                                        android:layout_marginRight="@dimen/_20sdp"/>
                                    <TextView
                                        android:id="@+id/Admin_Payment_Total_Unpaid_Income"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/_25sdp"
                                        android:textColor="#C62828"
                                        android:textStyle="bold"
                                        android:text="5000"
                                        android:layout_marginLeft="@dimen/_20sdp"
                                        android:layout_marginRight="@dimen/_20sdp"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:layout_gravity="center_vertical"
                                android:layout_marginBottom="@dimen/_5sdp">
                                <RadioGroup
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical|center_horizontal">
                                    <RadioButton
                                        android:layout_width="@dimen/_75sdp"
                                        android:layout_height="@dimen/_30sdp"
                                        android:id="@+id/Admin_Payment_All_Radio"
                                        android:textSize="@dimen/_16sdp"
                                        android:button="@android:color/transparent"
                                        android:background="@drawable/radio_selector"
                                        android:textColor="@drawable/text_colour"
                                        android:text="ALL"
                                        android:checked="true"
                                        android:foreground="@drawable/admin_home_button_2"
                                        android:textAlignment="center"
                                        android:elevation="@dimen/_4sdp"
                                        android:layout_marginBottom="@dimen/_5sdp"
                                        android:layout_marginTop="@dimen/_5sdp"/>
                                    <View
                                        android:layout_width="@dimen/_2sdp"
                                        android:layout_height="@dimen/_2sdp"
                                        android:layout_margin="@dimen/_5sdp"/>
                                    <RadioButton
                                        android:id="@+id/Admin_Payment_Paid_Radio"
                                        android:layout_width="@dimen/_75sdp"
                                        android:layout_height="@dimen/_30sdp"
                                        android:layout_marginLeft="@dimen/_12sdp"
                                        android:textSize="@dimen/_16sdp"
                                        android:text="PAID"
                                        android:button="@android:color/transparent"
                                        android:background="@drawable/radio_selector"
                                        android:textColor="#30AC21"
                                        android:textAlignment="center"
                                        android:elevation="@dimen/_4sdp"
                                        android:layout_marginBottom="@dimen/_5sdp"
                                        android:layout_marginTop="@dimen/_5sdp"/>
                                    <View
                                        android:layout_width="@dimen/_2sdp"
                                        android:layout_height="@dimen/_2sdp"
                                        android:layout_margin="@dimen/_5sdp"/>
                                    <RadioButton
                                        android:layout_width="@dimen/_75sdp"
                                        android:layout_height="@dimen/_30sdp"
                                        android:layout_marginLeft="@dimen/_12sdp"
                                        android:textSize="@dimen/_16sdp"
                                        android:id="@+id/Admin_Payment_Unpaid_Radio"
                                        android:text="UNPAID"
                                        android:button="@android:color/transparent"
                                        android:background="@drawable/radio_selector"
                                        android:textColor="#C62828"
                                        android:textAlignment="center"
                                        android:elevation="@dimen/_4sdp"
                                        android:layout_marginBottom="@dimen/_5sdp"
                                        android:layout_marginTop="@dimen/_5sdp"/>
                                </RadioGroup>
                            </LinearLayout>
                            <TableLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/image_border">
                                <TableRow
                                    android:layout_height="wrap_content"
                                    android:weightSum="5"
                                    android:padding="@dimen/_3sdp"
                                    android:layout_margin="@dimen/_3sdp"
                                    android:gravity="center_horizontal">
                                    <TextView
                                        android:id="@+id/Admin_Payment_Design_OrderID"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Order ID"
                                        android:textSize="@dimen/_15sdp"
                                        android:layout_weight="1"
                                        android:gravity="center_horizontal"
                                        android:textColor="@color/app"/>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="|"
                                        android:textSize="@dimen/_15sdp"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:textColor="@color/app"/>

                                    <TextView
                                        android:id="@+id/Admin_Payment_Design_Amount"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Amount"
                                        android:textSize="@dimen/_15sdp"
                                        android:layout_weight="1"
                                        android:gravity="center_horizontal"
                                        android:textColor="@color/app"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="|"
                                        android:textSize="@dimen/_15sdp"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:textColor="@color/app"/>

                                    <TextView
                                        android:id="@+id/Admin_Payment_Design_Status"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Status"
                                        android:textSize="@dimen/_15sdp"
                                        android:layout_weight="1"
                                        android:gravity="center_horizontal"
                                        android:textColor="@color/app"/>
                                </TableRow>
                            </TableLayout>
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/Admin_Payment_Recyclerview"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                tools:listitem="@layout/activity_admin_payment_design"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>