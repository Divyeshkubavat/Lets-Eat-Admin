<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/user_background"
    tools:context=".AdminProfile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8F5F5"
        android:id="@+id/sw1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_136sdp"
                    android:layout_height="@dimen/_136sdp"
                    android:layout_margin="@dimen/_24sdp"
                    android:layout_marginTop="@dimen/_56sdp"
                    android:visibility="invisible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible"
                    tools:ignore="MissingConstraints">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="@dimen/_320sdp"
                        android:background="@drawable/accout_background"
                        app:layout_constraintStart_toStartOf="parent">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/circles"
                            tools:layout_editor_absoluteX="minus60sdp"
                            tools:layout_editor_absoluteY="0dp" />
                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <TextView
                        android:id="@+id/Admin_Account_Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:visibility="visible"
                        android:textColor="@color/button"
                        android:textSize="@dimen/_18sdp"
                        app:layout_constraintEnd_toEndOf="@+id/Admin_Account_Image"
                        app:layout_constraintStart_toStartOf="@+id/Admin_Account_Image"
                        app:layout_constraintTop_toBottomOf="@+id/Admin_Account_Image" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/Admin_Account_Image"
                        android:layout_width="@dimen/_136sdp"
                        android:layout_height="@dimen/_136sdp"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:src="@drawable/avatar"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_250sdp"
                        android:visibility="visible"
                        android:layout_marginStart="@dimen/_19sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_19sdp"
                        android:background="@drawable/user_background"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/Admin_Account_Name">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_horizontal">

                                    <Button
                                        android:id="@+id/Admin_Account_Edit_Button"
                                        android:layout_width="@dimen/_69sdp"
                                        android:layout_height="@dimen/_65sdp"
                                        android:layout_margin="@dimen/_6sdp"
                                        android:background="@drawable/admin_home_button_2"
                                        android:backgroundTint="@color/app"
                                        android:text="EDIT"
                                        android:textColor="@color/button"
                                        android:textSize="@dimen/_8sdp"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintHorizontal_bias="0.953"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintVertical_bias="0.0" />
                                    <View
                                        android:layout_width="@dimen/_1sdp"
                                        android:layout_height="match_parent"
                                        android:background="@color/black"
                                        android:layout_marginLeft="@dimen/_30sdp"
                                        android:layout_marginRight="@dimen/_30sdp"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:layout_marginBottom="@dimen/_10sdp"/>
                                    <Button
                                        android:id="@+id/Admin_Account_Payment_button"
                                        android:layout_width="@dimen/_70sdp"
                                        android:layout_height="@dimen/_65sdp"
                                        android:layout_margin="@dimen/_6sdp"
                                        android:background="@drawable/admin_home_button_2"
                                        android:backgroundTint="@color/app"
                                        android:text="PAYMENT"
                                        android:textColor="@color/button"
                                        android:textSize="@dimen/_8sdp"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintHorizontal_bias="0.046"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent" />

                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_8sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Admin ID : "
                                android:textColor="@color/app"
                                android:textSize="@dimen/_12sdp"
                                android:textStyle="bold" />

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:id="@+id/Admin_Account_ID"
                                android:textAlignment="viewEnd"
                                android:textColor="@color/app"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_margin="@dimen/_6sdp"
                            android:background="@color/black" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_8sdp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Email : "
                                android:textColor="@color/app"
                                android:textSize="@dimen/_12sdp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/Admin_Account_Email"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAlignment="viewEnd"
                                android:textColor="@color/app"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_margin="@dimen/_6sdp"
                            android:background="@color/black" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_8sdp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Mobile : "
                                android:textColor="@color/app"
                                android:textSize="@dimen/_12sdp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/Admin_Account_Mobile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAlignment="viewEnd"
                                android:textColor="@color/app"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_margin="@dimen/_6sdp"
                            android:background="@color/black" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_margin="@dimen/_8sdp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_32sdp"
                                android:layout_weight="1"
                                android:text="Date of Birth : "
                                android:textColor="@color/app"
                                android:textSize="@dimen/_12sdp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:inputType="date"
                                android:id="@+id/Admin_Account_DOB"
                                android:textAlignment="viewEnd"
                                android:textColor="@color/app"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <Button
                android:id="@+id/Admin_Account_Logout_Button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_48sdp"
                android:layout_marginLeft="@dimen/_16sdp"
                android:visibility="visible"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:background="@drawable/shape_button"
                android:backgroundTint="@color/app"
                android:text="LOGOUT"
                android:layout_marginBottom="@dimen/_70sdp"
                android:textColor="@color/button"
                android:textSize="@dimen/_13sdp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>