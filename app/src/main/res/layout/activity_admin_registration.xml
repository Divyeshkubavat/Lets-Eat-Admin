<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarAlwaysDrawHorizontalTrack="true"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:orientation="vertical"
    android:background="#281818"
    tools:context=".Admin_Registration">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:lottie_autoPlay="true"
                android:layout_marginTop="0dp"
                android:layout_centerHorizontal="true"
                app:lottie_rawRes="@raw/animation_lk70ackc"
                android:id="@+id/login_anime"
                app:lottie_repeatCount="50"
                tools:ignore="MissingClass"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_edittext"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:padding="24dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Registration"
                        android:id="@+id/logintext"
                        android:textSize="36dp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="#281818"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:hintAnimationEnabled="false"
                        app:boxStrokeWidth="0dp"
                        app:boxBackgroundColor="#ffffff"
                        app:boxStrokeWidthFocused="0dp"
                        android:hint=" ">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/custom_edittext"
                            android:padding="15dp"
                            android:hint="Full Name"
                            android:id="@+id/re_name"
                            android:singleLine="true"
                            android:drawableLeft="@drawable/baseline_person_24"
                            android:drawablePadding="10dp"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxStrokeWidth="0dp"
                        app:boxBackgroundColor="#ffffff"
                        app:boxStrokeWidthFocused="0dp"
                        android:layout_marginTop="10dp"
                        app:hintAnimationEnabled="false"
                        android:hint=" ">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/custom_edittext"
                            android:padding="15dp"
                            android:inputType="number"
                            android:hint="Mobile Number"
                            android:id="@+id/re_mobile"
                            android:maxLength="10"
                            android:singleLine="true"
                            android:drawableLeft="@drawable/baseline_local_phone_24"
                            android:drawablePadding="10dp"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxStrokeWidth="0dp"
                        app:boxBackgroundColor="#ffffff"
                        app:boxStrokeWidthFocused="0dp"
                        android:layout_marginTop="10dp"
                        app:hintAnimationEnabled="false"
                        android:hint=" ">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/custom_edittext"
                            android:padding="15dp"
                            android:singleLine="true"
                            android:hint="Email Address"
                            android:id="@+id/email"
                            android:drawableLeft="@drawable/baseline_email_24"
                            android:drawablePadding="10dp"/>

                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:hintAnimationEnabled="true"
                        android:hint=" "
                        app:passwordToggleEnabled="true"
                        app:boxStrokeWidth="0dp"
                        app:boxBackgroundColor="#ffffff"
                        app:boxStrokeWidthFocused="0dp"
                        app:passwordToggleTint="#281818"
                        app:startIconTint="#281818"
                        app:startIconDrawable="@drawable/baseline_lock_24">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/custom_edittext"
                            android:id="@+id/re_pass"
                            android:inputType="textPassword"
                            android:padding="15dp"
                            android:hint="Password"/>

                    </com.google.android.material.textfield.TextInputLayout>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/re_button"
                        android:text="Sign Up"
                        android:textSize="18dp"
                        android:layout_marginTop="30dp"
                        android:backgroundTint="#281818"
                        android:textColor="@color/white"
                        android:background="@drawable/shape_button"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:text="ALREADY HAVE AN ACCOUNT ?"
        android:textColor="@color/white"
        android:layout_marginTop="770dp"
        android:textSize="16dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:textColor="@color/button"
        android:textStyle="bold"
        android:id="@+id/login"
        android:textSize="16dp"
        android:clickable="true"
        android:layout_marginTop="770dp"
        android:layout_marginLeft="295dp"/>


</RelativeLayout>