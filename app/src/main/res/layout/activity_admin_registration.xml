<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarAlwaysDrawHorizontalTrack="true"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:background="#281818"
    tools:context=".Admin_Registration">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/l1">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/Admin_Registration_Animation"
                    android:layout_width="@dimen/_160sdp"
                    android:layout_height="@dimen/_200sdp"
                    app:lottie_autoPlay="true"
                    android:layout_marginTop="@dimen/_minus57sdp"
                    android:layout_gravity="center"
                    app:lottie_rawRes="@raw/registration"
                    app:lottie_repeatCount="50"
                    tools:ignore="MissingClass" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_edittext"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_24sdp"
                    android:layout_marginRight="@dimen/_24sdp"
                    app:cardCornerRadius="@dimen/_24sdp"
                    app:cardElevation="@dimen/_16sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_horizontal"
                        android:padding="@dimen/_18sdp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Registration"
                            android:id="@+id/logintext"
                            android:textSize="@dimen/_29sdp"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="#281818"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_16sdp"
                            app:hintAnimationEnabled="false"
                            app:boxStrokeWidth="0dp"
                            app:boxBackgroundColor="#ffffff"
                            app:boxStrokeWidthFocused="0dp"
                            android:hint=" ">
                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/custom_edittext"
                                android:padding="@dimen/_12sdp"
                                android:hint="Full Name"
                                android:id="@+id/Admin_Registration_Fullname"
                                android:singleLine="true"
                                android:drawableLeft="@drawable/baseline_person_24"
                                android:drawablePadding="@dimen/_8sdp"/>
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxStrokeWidth="0dp"
                            app:boxBackgroundColor="#ffffff"
                            app:boxStrokeWidthFocused="0dp"
                            android:layout_marginTop="@dimen/_8sdp"
                            app:hintAnimationEnabled="false"
                            android:hint=" ">
                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/custom_edittext"
                                android:padding="@dimen/_12sdp"
                                android:inputType="number"
                                android:hint="Mobile Number"
                                android:id="@+id/Admin_Registration_Mobile"
                                android:maxLength="10"
                                android:singleLine="true"
                                android:drawableLeft="@drawable/baseline_local_phone_24"
                                android:drawablePadding="@dimen/_8sdp"/>

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxStrokeWidth="0dp"
                            app:boxBackgroundColor="#ffffff"
                            app:boxStrokeWidthFocused="0dp"
                            android:layout_marginTop="@dimen/_8sdp"
                            app:hintAnimationEnabled="false"
                            android:hint=" ">
                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/custom_edittext"
                                android:padding="@dimen/_12sdp"
                                android:singleLine="true"
                                android:hint="Email Address"
                                android:id="@+id/Admin_Registration_Email"
                                android:drawableLeft="@drawable/baseline_email_24"
                                android:drawablePadding="@dimen/_8sdp"/>

                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            app:hintAnimationEnabled="true"
                            android:hint=" "
                            app:passwordToggleEnabled="true"
                            app:boxStrokeWidth="0dp"
                            app:boxBackgroundColor="#ffffff"
                            app:boxStrokeWidthFocused="0dp"
                            app:passwordToggleTint="#281818"
                            app:startIconTint="#281818"
                            app:startIconDrawable="@drawable/baseline_lock_24">
                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/custom_edittext"
                                android:id="@+id/Admin_Registration_Pass"
                                android:inputType="textPassword"
                                android:padding="@dimen/_12sdp"
                                android:hint="Password"/>

                        </com.google.android.material.textfield.TextInputLayout>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/Admin_Registration_Button"
                            android:text="Sign Up"
                            android:textSize="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_24sdp"
                            android:backgroundTint="#281818"
                            android:textColor="@color/white"
                            android:background="@drawable/shape_button"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/_30sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ALREADY HAVE AN ACCOUNT ?"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13sdp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LOGIN"
                        android:textColor="@color/button"
                        android:textStyle="bold"
                        android:id="@+id/Admin_Registration_Login"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textSize="@dimen/_13sdp"
                        android:clickable="true" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>