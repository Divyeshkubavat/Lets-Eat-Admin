<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Admin_Offers_View_Design">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_20sdp"
        app:cardCornerRadius="@dimen/_20sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_160sdp"
                android:src="@drawable/drink"
                android:id="@+id/Admin_Offer_Image"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_margin="@dimen/_5sdp">
                <Button
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:backgroundTint="#0A3E25"
                    android:text="EDIT"
                    android:id="@+id/Admin_Offer_Edit_Button"
                    android:background="@drawable/admin_home_button_2"
                    android:textSize="@dimen/_12sdp"/>
                <View
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_20sdp"/>
                <Button
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:backgroundTint="#0A3E25"
                    android:text="DELETE"
                    android:id="@+id/Admin_Offer_Delete_Button"
                    android:background="@drawable/admin_home_button_2"
                    android:textSize="@dimen/_12sdp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_margin="@dimen/_6sdp"
                android:background="@color/black" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>